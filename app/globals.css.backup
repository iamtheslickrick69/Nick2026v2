/* Tailwind CSS */
@import "tailwindcss";

/* Theme updated to Teal-Blue gradient */

:root {
  /* Teal to Blue Gradient Theme - Light Mode */
  --gradient-start: oklch(0.75 0.15 180); /* Teal */
  --gradient-end: oklch(0.62 0.20 230); /* Blue */

  --background: oklch(0.99 0.01 195);
  --foreground: oklch(0.18 0.02 210);
  --card: oklch(1 0 0);
  --card-foreground: oklch(0.18 0.02 210);
  --popover: oklch(1 0 0);
  --popover-foreground: oklch(0.18 0.02 210);
  --primary: oklch(0.62 0.20 230); /* Blue */
  --primary-foreground: oklch(0.99 0 0);
  --secondary: oklch(0.94 0.02 195); /* Light teal tint */
  --secondary-foreground: oklch(0.18 0.02 210);
  --muted: oklch(0.96 0.01 195);
  --muted-foreground: oklch(0.45 0.02 210);
  --accent: oklch(0.75 0.15 180); /* Teal accent */
  --accent-foreground: oklch(0.18 0.02 210);
  --destructive: oklch(0.58 0.22 27);
  --destructive-foreground: oklch(0.99 0 0);
  --border: oklch(0.90 0.02 195);
  --input: oklch(0.90 0.02 195);
  --ring: oklch(0.62 0.20 230); /* Blue ring */
  --chart-1: oklch(0.75 0.15 180); /* Teal */
  --chart-2: oklch(0.62 0.20 230); /* Blue */
  --chart-3: oklch(0.68 0.17 200); /* Mid gradient */
  --chart-4: oklch(0.55 0.18 250); /* Deeper blue */
  --chart-5: oklch(0.80 0.12 170); /* Lighter teal */
  --radius: 0.625rem;
  --sidebar: oklch(0.98 0.01 195);
  --sidebar-foreground: oklch(0.18 0.02 210);
  --sidebar-primary: oklch(0.62 0.20 230);
  --sidebar-primary-foreground: oklch(0.99 0 0);
  --sidebar-accent: oklch(0.94 0.02 195);
  --sidebar-accent-foreground: oklch(0.18 0.02 210);
  --sidebar-border: oklch(0.90 0.02 195);
  --sidebar-ring: oklch(0.62 0.20 230);
}

.dark {
  /* Teal to Blue Gradient Theme - Dark Mode */
  --gradient-start: oklch(0.65 0.18 180); /* Vibrant Teal */
  --gradient-end: oklch(0.58 0.23 230); /* Vibrant Blue */

  --background: oklch(0.12 0.02 210); /* Deep blue-tinted dark */
  --foreground: oklch(0.95 0.01 195); /* Cool white */
  --card: oklch(0.15 0.02 210); /* Slightly lighter than bg */
  --card-foreground: oklch(0.95 0.01 195);
  --popover: oklch(0.15 0.02 210);
  --popover-foreground: oklch(0.95 0.01 195);
  --primary: oklch(0.58 0.23 230); /* Vibrant Blue */
  --primary-foreground: oklch(0.98 0 0);
  --secondary: oklch(0.20 0.03 195); /* Dark teal tint */
  --secondary-foreground: oklch(0.95 0.01 195);
  --muted: oklch(0.22 0.02 195);
  --muted-foreground: oklch(0.65 0.02 195);
  --accent: oklch(0.65 0.18 180); /* Vibrant Teal */
  --accent-foreground: oklch(0.98 0 0);
  --destructive: oklch(0.50 0.20 27);
  --destructive-foreground: oklch(0.95 0 0);
  --border: oklch(0.25 0.03 195);
  --input: oklch(0.25 0.03 195);
  --ring: oklch(0.65 0.18 180); /* Teal ring */
  --chart-1: oklch(0.65 0.18 180); /* Teal */
  --chart-2: oklch(0.58 0.23 230); /* Blue */
  --chart-3: oklch(0.61 0.20 200); /* Mid gradient */
  --chart-4: oklch(0.70 0.15 170); /* Light teal */
  --chart-5: oklch(0.52 0.25 240); /* Deep blue */
  --sidebar: oklch(0.13 0.02 210); /* Darker than main bg */
  --sidebar-foreground: oklch(0.95 0.01 195);
  --sidebar-primary: oklch(0.58 0.23 230);
  --sidebar-primary-foreground: oklch(0.98 0 0);
  --sidebar-accent: oklch(0.20 0.03 195);
  --sidebar-accent-foreground: oklch(0.95 0.01 195);
  --sidebar-border: oklch(0.25 0.03 195);
  --sidebar-ring: oklch(0.65 0.18 180);
}

@theme inline {
  /* Updated font variables - body text now uses Figtree */
  --font-sans: var(--font-figtree), "Figtree", "Figtree Fallback", system-ui, sans-serif;
  --font-figtree: var(--font-figtree), "Figtree", "Figtree Fallback", system-ui, sans-serif;
  /* Update font-mono to use Geist Mono variable */
  --font-mono: var(--font-geist-mono), "Geist Mono", "Geist Mono Fallback", ui-monospace, monospace;
  --color-background: var(--background);
  --color-foreground: var(--foreground);
  --color-card: var(--card);
  --color-card-foreground: var(--card-foreground);
  --color-popover: var(--popover);
  --color-popover-foreground: var(--popover-foreground);
  --color-primary: var(--primary);
  --color-primary-foreground: var(--primary-foreground);
  --color-secondary: var(--secondary);
  --color-secondary-foreground: var(--secondary-foreground);
  --color-muted: var(--muted);
  --color-muted-foreground: var(--muted-foreground);
  --color-accent: var(--accent);
  --color-accent-foreground: var(--accent-foreground);
  --color-destructive: var(--destructive);
  --color-destructive-foreground: var(--destructive-foreground);
  --color-border: var(--border);
  --color-input: var(--input);
  --color-ring: var(--ring);
  --color-chart-1: var(--chart-1);
  --color-chart-2: var(--chart-2);
  --color-chart-3: var(--chart-3);
  --color-chart-4: var(--chart-4);
  --color-chart-5: var(--chart-5);
  --radius-sm: calc(var(--radius) - 4px);
  --radius-md: calc(var(--radius) - 2px);
  --radius-lg: var(--radius);
  --radius-xl: calc(var(--radius) + 4px);
  --color-sidebar: var(--sidebar);
  --color-sidebar-foreground: var(--sidebar-foreground);
  --color-sidebar-primary: var(--sidebar-primary);
  --color-sidebar-primary-foreground: var(--sidebar-primary-foreground);
  --color-sidebar-accent: var(--sidebar-accent);
  --color-sidebar-accent-foreground: var(--sidebar-accent-foreground);
  --color-sidebar-border: var(--sidebar-border);
  --color-sidebar-ring: var(--sidebar-ring);
}

@layer base {
  * {
    @apply border-border outline-ring/50;
  }
  body {
    /* Set body text to Figtree 18px */
    @apply bg-background text-foreground text-lg;
    font-family: var(--font-figtree), "Figtree", "Figtree Fallback", system-ui, sans-serif;
  }
}

/* Shimmer animation for skeleton loaders */
@keyframes shimmer {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

.animate-shimmer {
  background-size: 200% 100%;
  animation: shimmer 2s infinite linear;
}

/* Import dashboard styles after all base styles */
@import '../styles/dashboard.css';
@import '../styles/responsive.css';
